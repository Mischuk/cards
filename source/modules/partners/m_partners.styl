.m_partners
  background #f4f4f4
  .lead
    height 385px
    text-align center
    background: #87bebb;
    background: -webkit-gradient(left top,right top,color-stop(0,#87bebb),color-stop(100%,#467aa8));
    background: -webkit-linear-gradient(left,#87bebb 0,#467aa8 100%);
    background: -o-linear-gradient(left,#87bebb 0,#467aa8 100%);
    background: -webkit-gradient(linear,left top,right top,from(#87bebb),to(#467aa8));
    background: linear-gradient(to right,#87bebb 0,#467aa8 100%);
    box-shadow -12px 8px 20px rgba(0,0,0,.2)
    h1
      font-family: ProximaNova-Black;
      font-weight: 400;
      font-style: normal;
      color #fff
      font-size 36px
      @media screen and (max-width: 460px)
        font-size 32px
  .list
    padding 60px 0
    .mobile-filter
      display none
      @media screen and (max-width: 750px)
        display block
        width 95%
        margin 0 auto
      .selectric-items
        text-align left
        border-radius 0 0 15px 15px
        background #fff
        li
          padding 5px 15px
          background none
          color #444
          font-size 16px
          text-transform uppercase
          &:hover
            color #ff500f
      .selectric-open
        .selectric
          border-radius 25px 25px 0 0
          border-bottom 1px solid #fff
        .selectric-items
          border-top 1px solid #fff
        &.selectric-above
          .selectric
            border-top 1px solid #fff
            border-radius 0 0 25px 25px
          .selectric-items
            border-radius 25px 25px 0 0
            border-bottom 1px solid #fff
          
      .selectric
        height 50px
        line-height 50px
        border-radius 25px
        background #ffffff
        color #444444
        font-size 14px
        text-align left
        padding-left 15px
        span.label
          line-height 50px
          height 50px
          margin-left 0
          font-family: ProximaNova-Bold;
          text-transform uppercase
          font-size 16px
          font-weight: 400;
          font-style: normal;
        .button
          width 50px
          height 50px
          font-size 0
          background #fff
          color transparent
          &:after
            display none
          &:before
            content ''
            position absolute
            right 20px
            top 50%
            background: url('../images/select-arrow.png') no-repeat 0 0
            width: 13px;
            height: 7px;
            margin-top -3.5px
      
    .sidebar
      float left
      width 30%
      background #fff
      box-shadow: 0 4px 20px rgba(27,27,27,.25);
      border-radius: 10px;
      padding 35px
      @media screen and (max-width: 880px)
        padding 15px
      @media screen and (max-width: 750px)
        display none
      .title
        padding-bottom 40px
        font-family: ProximaNova-Black;
        font-weight: 400;
        font-style: normal;
        font-size 18px
        color #444444
        text-transform uppercase
        @media screen and (max-width: 880px)
          padding-bottom 20px
      ul
        li
          & + li
            border-top 1px solid #e6e6e6
          a
            display inline-block
            vertical-align middle
            padding 15px 0
            font-family: ProximaNova-Bold;
            font-weight: 400;
            font-style: normal;
            font-size 16px
            color #444444
            text-transform uppercase
            @media screen and (max-width: 880px)
              font-size 15px
            &:hover,
            &.current
              color #ff500e
    .items
      float right
      width 68%
      @media screen and (max-width: 750px)
        float none
        width 100%
        margin-top 4%
        text-align center
      .item
        display none        
        vertical-align top
        width 45%
        height 223px
        line-height 223px
        text-align center
        background #fff
        margin-left 2%
        margin-right 2%
        margin-bottom 4%
        border-radius: 10px;
        border: 1px solid #cecece;
        box-shadow: -6px 8px 13px rgba(0,0,0,.17);
        @media screen and (max-width: 440px)
          height 115px
          line-height 115px  
        &.current
          display inline-block      
        .image
          width 100%
          height 100%
          a
            display block
            width 100%
            height 100%
            img
              display inline-block
              vertical-align middle
              max-width 90%
              max-height 90%

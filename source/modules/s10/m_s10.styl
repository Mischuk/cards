.m_s10
  background url(../images/bg.png) repeat 50%
  padding-bottom 55px
  @media screen and (max-width: 568px)
    padding-bottom 25px
  @media screen and (min-width: 1024px)
    background-attachment fixed
  .columns
    margin-top 40px
    clearfix()
    .column
      position relative
      float left
      width 33.333%
      margin-bottom 55px
      &:nth-child(3n+1)
        clear left
      &:last-child
        .icon:after
          display none
      @media screen and (max-width: 568px)
        width 100%
        margin-bottom 25px
        &:last-child
          margin-bottom 0
  .column
    text-align center
    &:hover
      @media screen and (min-width: 568px)
        .icon
          lg-orange()
          > div
            animation scaling .5s cubic-bezier(.33,.66,.66,1)
    &:nth-child(1)
      .icon > div
        background: url('../images/m_s10/icons.png') no-repeat 0 0;
        width: 68px;
        height: 70px;
      &:hover
        @media screen and (min-width: 568px)
          .icon > div
            background-position 0 -88px
    &:nth-child(2)
      .icon > div
        background: url('../images/m_s10/icons.png') no-repeat -82px 0;
        width: 68px;
        height: 72px;
      &:hover
        @media screen and (min-width: 568px)
          .icon > div
            background-position -82px -88px
    &:nth-child(3)
      .icon > div
          background: url('../images/m_s10/icons.png') no-repeat -178px -11px;
          width: 70px;
          height: 49px;
      &:hover
        @media screen and (min-width: 568px)
          .icon > div
            background-position -178px -99px
    .icon
      size(140px)
      margin 0 auto
      border-radius 0
      line-height 140px
      border-radius 50%
      position relative
      @media screen and (max-width: 568px)
        size(100px)
        line-height 100px
      &:after
        content ""
        background url("../images/m_s10/arrow.png") no-repeat 0 0
        width 40px
        height 19px
        position absolute
        right -150px
        top 70px
        @media screen and (max-width: 1200px)
          display none
      > div
        display inline-block
        vertical-align middle
    .title
      bold()
      text-transform uppercase
      margin-top 20px
      margin-bottom 30px
      @media screen and (max-width: 568px)
        margin-top 5px
        margin-bottom 10px
    .desc
      color #8c8c8c
      font-size 16px
      padding 0 60px
      @media screen and (max-width: 767px)
        padding 0 30px
      span
        display block
        color #444444
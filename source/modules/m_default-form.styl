.m_default-form
  position absolute
  z-index 10
  right 15px
  bottom -90px
  width 475px
  padding 30px 40px
  border 5px solid #d2d2d2
  background #fff
  border-radius $radius
  box-shadow 0 0 20px rgba(0,0,0,.2)
  text-align center
  @media screen and (max-width: 1200px)
    position static
    margin 0 auto
  @media screen and (max-width: 568px)
    width 100%
    padding-left 15px
    padding-right 15px
  h1
    padding 0
    padding-bottom 50px
    @media screen and (max-width: 568px)
      padding-bottom 25px
    b
      color #444444
      font-size 24px
    span
      light()
      color #999
      font-size 20px
      display block
  .form
    &-input   /* input */
      width 100%
      height 50px
      border 1px solid #e7e7e7
      color #96b1bc
      background #f4f4f4
      text-align center
      display block
      margin 0 0 12px
      font-size 16px
      outline none
      border-radius 50px
      &.error
        border 1px solid red !important
      &:focus
        color #000
    &-label
      position relative
    &-submit   /* Кнопка submit */
      transition all 0.15s cubic-bezier(.33,.66,.66,1)
      position relative
      display block
      width 100%
      height 100%
      border-radius 50px
      border 1px solid #ee2840
      text-transform uppercase
      text-align center
      line-height 58px
      box-shadow 4px 0 20px rgba(0,0,0,.12)
      background #ee2840
      color #fff
      @media screen and (max-width: 420px)
        font-size 14px
        padding-left 5px
        padding-right 5px
        white-space: normal
        line-height 1.2
        padding-top 12px
        padding-bottom 12px
      &:hover
        background #ee2840 - 15%
        border-color #ee2840 - 15%

  label.error
    display none !important
  .safe
    padding-left 20px
    position relative
    color #8b8b8b
    display inline-block
    vertical-align middle
    width auto
    margin-top 15px
    @media screen and (max-width: 568px)
      font-size 13px
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -5px -45px;
      width: 12px;
      height: 16px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
      @media screen and (max-width: 568px)
        margin-top -11px
.m_s13
  background url("../images/m_s13/bg.jpg") no-repeat 50%
  background-size cover
  height 775px
  padding-top 110px
  @media screen and (max-width: 1200px)
    padding-top 0
    height auto
    padding-bottom 55px
  @media screen and (max-width: 568px)
    padding-bottom 25px
  h1
    position relative
    z-index 10
  .image
    position absolute
    left 50%
    top 50%
    width 973px
    height 530px
    background url("../images/m_s13/map.png") no-repeat 0 0
    margin-left -(@width/2)
    margin-top -(@height/2)
    @media screen and (max-width: 992px)
      width 100%
      height 100%
      background-size contain
      margin-left 0
      margin-top 0
      left 0
      top 0
    @media screen and (max-width: 568px)
      display none
  .locations
    float right
    width 475px
    height 400px
    border 5px solid #d2d2d2
    background #fff
    position relative
    z-index 2
    border-radius 10px
    display table
    padding-left 90px
    @media screen and (max-width: 767px)
      float none
      margin 0 auto
    @media screen and (max-width: 568px)
      width 100%
      height auto
      padding-top 30px
      padding-bottom 30px
      margin-top 20px
    @media screen and (max-width: 480px)
      padding-left 20px
      padding-right 20px
    .helper
      display table-cell
      vertical-align middle
    ul
      li
        position relative
        padding 10px 0
        color #8c8c8c
        font-size 16px
        @media screen and (max-width: 380px)
          text-align center
        &:after
          anim()
          content ''
          position absolute
          left -45px
          top 15px
          width 10px
          height 10px
          border 1px solid $orange
          border-radius 50%
          @media screen and (max-width: 480px)
            display none
        &:hover
          &:after
            background $orange
        b
          regular()
          color #3e3e3e
          display inline-block
          vertical-align middle
          @media screen and (max-width: 380px)
            display block
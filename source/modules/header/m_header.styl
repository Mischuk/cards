.m_header
  position fixed
  left 0
  top 0
  width 100%
  height 72px
  background #fff
  box-shadow 0 0 10px rgba(0,0,0,.25)
  z-index 1000
  transition height .25s linear
  &.scrolled
    @media screen and (max-width: 460px)
      height 72px
      .contacts
        display none
      .logo
        transform translateY(10px)
      .menu
        @media screen and (max-width: 460px)
          top 72px
  @media screen and (max-width: 460px)
    height 115px
  .logo, .contacts
    position absolute
    top 0
  .logo
    transition transform .25s linear
    left 15px
    width 170px
    line-height 72px
    text-align left
    @media screen and (max-width: 460px)
      left 50%
      margin-left -85px
      line-height 50px
    a
      display inline-block
      vertical-align middle
      background: url('../images/sprite.png') no-repeat 0 0;
      width: 148px;
      height: 33px;
  .contacts
    right 15px
    width 220px
    height 100%
    display table
    @media screen and (max-width: 1200px)
      margin-right 25px
    @media screen and (max-width: 460px)
      width 100%
      right 0
      margin-right 0
      text-align center
      padding-top 50px
    .tel
      a
        bold()
        color $orange
        font-size 22px
        cursor default
        text-decoration none
    .callback
      a
        anim()
        display inline-block
        vertical-align middle
        line-height 1
        font-size 15px
        border-bottom 1px dashed $link
        color $link
        &:hover
          color $orange
          border-color #fff
  .menu
    height 50px
    padding 11px 220px 11px 170px
    @media screen and (max-width: 1200px)
      padding 0
      height auto
      position absolute
      left 0
      top 72px
      width 100%
      anim()
      transform translateX(-100%)
      &.open
        transform translateX(0%)
    @media screen and (max-width: 460px)
      top 115px

    ul
      display table
      width 100%
      height 100%
      border-left 1px solid $border
      border-right 1px solid $border
      @media screen and (max-width: 1200px)
        display block
        border none
        background #fff
      li
        position relative
        display table-cell
        vertical-align middle
        text-align center
        @media screen and (max-width: 1200px)
          display block
          border-top 1px solid $border
        & + li:after
          content ''
          position absolute
          left -2px
          top 50%
          margin-top -2px
          width 4px
          height 4px
          border-radius 50%
          background $orange
          @media screen and (max-width: 1200px)
            display none
        a
          anim()
          display inline-block
          vertical-align middle
          line-height 50px
          width 100%
          text-transform uppercase
          color $black
          font-size 14px
          padding 0 10px
          &:hover
            color $orange

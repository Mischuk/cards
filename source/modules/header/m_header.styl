.m_header
  // display none
  // position fixed
  left 0
  top 0
  width 100%
  height 72px
  background #fff
  box-shadow 0 0 10px rgba(0,0,0,.25)
  z-index 1000
  transition height .25s linear
  &.scrolled
    @media screen and (max-width: 460px)
      height 72px
      .contacts
        display none
      .logo
        transform translateY(3px)
      .menu
        @media screen and (max-width: 460px)
          top 72px  
  .logo, .contacts
    position absolute
    top 0
  .logo
    transition transform .25s linear
    left 15px
    width 170px
    line-height 72px
    text-align left
    //@media screen and (max-width: 460px)
    //  left 50%
    //  margin-left -85px
    //  line-height 50px
    //  text-align center
    a
      display inline-block
      vertical-align middle
      background: url('../images/logo_.png') no-repeat 0 0;
      background-size contain
      width: 148px;
      height: 65px;
      @media screen and (max-width: 360px)
        background-position center
        width 90px
  .contacts
    right 15px
    // width 220px
    height 100%
    display table    
    //@media screen and (max-width: 460px)
    //  width 100%
    //  right 0
    //  margin-right 0
    //  text-align center
    //  padding-top 50px
    @media screen and (max-width: 1200px)
      right 0
    .tel
      a
        bold()
        color $orange
        font-size 22px
        cursor default
        text-decoration none
    .callback
      a
        anim()
        display inline-block
        vertical-align middle
        line-height 1
        font-size 15px
        border-bottom 1px dashed $link
        color $link
        &:hover
          color $orange
          border-color #fff
    .action
      display inline-block
      vertical-align middle
      line-height 50px
      height 50px
      border-right 1px solid #e3e3e3
      padding-right 30px
      margin-right 60px
      @media screen and (max-width: 360px)
        margin-right 50px
        padding-right 15px
      a
        color #333
        text-decoration underline
        text-transform uppercase
        font-size 16px
        &:hover
          color #ff5a0b
      
  .menu
    height 50px
    padding 11px 220px 11px 170px
    @media screen and (max-width: 1200px)
      padding 0
      height auto
      position absolute
      left 0
      top 72px
      width 100%
      anim()
      transform translateX(-100%)
      &.open
        transform translateX(0%)
    @media screen and (max-width: 460px)
      top 115px

    ul
      display table
      width 100%
      height 100%
      border-left 1px solid $border
      border-right 1px solid $border
      @media screen and (max-width: 1200px)
        display block
        border none
        background #fff
      li
        position relative
        display table-cell
        vertical-align middle
        text-align center
        @media screen and (max-width: 1200px)
          display block
          border-top 1px solid $border
        & + li:after
          content ''
          position absolute
          left -2px
          top 50%
          margin-top -2px
          width 4px
          height 4px
          border-radius 50%
          background $orange
          @media screen and (max-width: 1200px)
            display none
        a
          anim()
          display inline-block
          vertical-align middle
          line-height 50px
          width 100%
          text-transform uppercase
          color $black
          font-size 14px
          padding 0 10px
          &:hover
            color $orange
.mm-menu
  background #fff
.mm-navbar .mm-btn:first-child
  left auto
  right 90px
  @media screen and (max-width: 460px)
    right 30px
.mm-close:after, 
.mm-close:before
  display none
.mm-close
  width 22px
  height 20px
  background url("../images/close.png") no-repeat 0 0
  top 25px
.mm-menu>.mm-navbar
  border none
.mm-listview
  text-align right
  padding-right 90px
  @media screen and (max-width: 460px)
    padding-right 15px
    padding-left 15px
  li
    &:first-child
      hr
        margin-top 0
    hr
      max-width 230px
      border none
      height 1px
      max-width 230px
      background #e3e3e3
      margin-right auto
      display block
      margin 0
      margin-top 25px
      margin-bottom 25px
      margin-left auto
    a
      display inline-block
      vertical-align middle
      padding 12px 0
      color #444444
      font-size 16px
      text-transform uppercase
      &:hover
        color #ff5a0b
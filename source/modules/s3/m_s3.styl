.m_s3
  background #f4f4f4
  padding-bottom 55px
  @media screen and (max-width: 568px)
    padding-bottom 25px
  .certificates
    margin-top 60px
    padding 0 15px
    @media screen and (max-width: 568px)
      margin-top 25px
    .item
      &:nth-child(1)
        lg-orange-saturate()
      &:nth-child(2)
        lg-blue()
      &:nth-child(3)
        lg-red()
      &:nth-child(4)
        lg-green()
      &:nth-child(5)
        lg-blue-dark()
      &:nth-child(6)
        lg-blue-light()
      &:nth-child(7)
        lg-pink()
      &:nth-child(8)
        lg-orange-saturate()
    .item
      clearfix()
      position relative
      display table
      width 100%
      padding 0 25px
      color #fff
      box-shadow 2px 0 20px rgba(0,0,0,.15)
      border-radius $radius
      margin-bottom 20px
      @media screen and (max-width: 640px)
        padding 0
      &:last-child
        margin-bottom 0
      .lead
        display table-cell
        vertical-align middle
        width 710px
        @media screen and (max-width: 1200px)
          position relative
          width 350px
          padding-right 30px
          padding-bottom 100px
        @media screen and (max-width: 767px)
          width 100%
          display block
          position static
          padding-bottom 0
          padding-right 0
      .details
        position relative
        display table-cell
        vertical-align middle
        width 350px
        padding-left 80px
        padding-right 35px
        @media screen and (max-width: 1200px)
          width 350px
        @media screen and (max-width: 767px)
          display block
          padding-left 40px
          padding-bottom 100px
          margin 0 auto
        @media screen and (max-width: 640px)
          width 100%
          padding-left 60px
        &:after
          content ''
          position absolute
          left 0
          top 50%
          height 250px
          margin-top -(@height/2)
          width 1px
          background #fff
          opacity .25
          z-index 1
          @media screen and (max-width: 767px)
            display none
        > div
          light()
          position relative
          font-size 16px
          line-height 24px
          padding 10px 0
          @media screen and (max-width: 568px)
            font-size 14px
          &:after
            content ''
            position absolute
            left -45px
            top 50%
          &.price:after
            background: url('../images/sprite.png') no-repeat -18px -264px;
            width: 26px;
            height: 26px;
            margin-top -(@height/2)
          &.locate:after
            background: url('../images/sprite.png') no-repeat -21px -317px;
            width: 20px;
            height: 27px;
            margin-top -(@height/2)
          &.online:after
            background: url('../images/sprite.png') no-repeat -18px -374px;
            width: 25px;
            height: 25px;
            margin-top -(@height/2)
          &.delivery:after
            background: url('../images/sprite.png') no-repeat -17px -433px;
            width: 27px;
            height: 19px;
            margin-top -(@height/2)
          &.branding:after
            background: url('../images/sprite.png') no-repeat -73px -425px;
            width: 27px;
            height: 27px;
            margin-top -(@height/2)
      .info
        float left
        width 325px
        padding 35px 0
        @media screen and (max-width: 1200px)
          float none
          width 100%
          padding-bottom 0
        .image
          anim()
          width 325px
          height 203px
          margin-bottom 30px
          border-radius $radius
          box-shadow 10px 0 13px rgba(0,0,0,.17)
          @media screen and (max-width:460px)
            width 100%
          &:hover
            transform scale(1.05) rotateZ(-2deg)
          @media screen and (max-width: 767px)
            margin 0 auto
            margin-bottom 30px
          img
            display block
            width 100%
            height 100%
        .action
          height 60px
          width 100%
          @media screen and (max-width: 1200px)
            position absolute
            left 0
            bottom 30px
            width 350px
            padding-right 30px
            z-index 20
          @media screen and (max-width: 767px)
            left 50%
            margin-left -175px
          @media screen and (max-width: 640px)
            width 100%
            margin-left 0
            left 0
            margin 0 auto
            padding-right 20px
            padding-left 20px
          a
            transition all 0.15s cubic-bezier(.33,.66,.66,1)
            position relative
            display block
            width 100%
            height 100%
            border-radius 50px
            border 1px solid #fff
            text-transform uppercase
            color #fff
            text-align center
            line-height 58px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -82px -270px;
              width: 7px;
              height: 11px;
              position absolute
              right 25px
              top 50%
              margin-top -5.5px
            &:hover
              background #fff
              color $orange
              box-shadow 4px 0 20px rgba(0,0,0,.12)
              &:after
                background-position -104px -270px

      .desc
        float right
        width 375px
        padding 50px 30px 15px 30px
        light()
        @media screen and (max-width: 1200px)
          float none
          width 100%
          padding 0
          padding-bottom 15px
        @media screen and (max-width: 767px)
          text-align center
        h3
          black()
          font-size 16px
          text-transform uppercase
          margin-bottom 15px
        p
          margin-bottom 0
          @media screen and (max-width: 568px)
            padding-left 10px
            padding-right 10px
            font-size 15px
        .slogan
          text-transform uppercase
          margin-bottom 30px
          @media screen and (max-width: 568px)
            margin-bottom 15px
            padding-left 5px
            padding-right 5px
  .slick-dots
    margin-bottom 0
    margin-top 25px
    @media screen and (max-width: 568px)
      margin-top 0


    margin-bottom 20px
    font-size 24px
    line-height 1
    color #444444
    text-transform uppercase
  p
    color #999999
  .mfp-close
    top 0
    right 0
  .bottom
    text-align right
    padding-right 35px
    padding-top 15px
    @media screen and (max-width: 500px)
      padding-right 0
    .action
      display inline-block
      vertical-align middle
      text-align center
      width 170px
      @media screen and (max-width: 500px)
        display block
        margin-top 20px
      .choose-submit
        -webkit-transition: all .15s cubic-bezier(.33,.66,.66,1);
        -o-transition: all .15s cubic-bezier(.33,.66,.66,1);
        transition: all .15s cubic-bezier(.33,.66,.66,1);
        position: relative;
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 50px;
        border: 1px solid #ee2840;
        text-transform: uppercase;
        text-align: center;
        line-height: 52px;
        -webkit-box-shadow: 4px 0 20px rgba(0,0,0,.12);
        box-shadow: 4px 0 20px rgba(0,0,0,.12);
        background: #ee2840;
        color: #fff;
        margin-left 35px
        @media screen and (max-width: 500px)
          margin-left 0
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -70px -264px;
          width: 24px;
          height: 17px;
          position absolute
          right 19px
          top 15px
        &:hover
          background: #db112a;
          border-color: #db112a;
      .choose-cancel
        -webkit-transition: all .15s cubic-bezier(.33,.66,.66,1);
        -o-transition: all .15s cubic-bezier(.33,.66,.66,1);
        transition: all .15s cubic-bezier(.33,.66,.66,1);
        position: relative;
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 50px;
        border: 1px solid #ee2840;
        text-transform: uppercase;
        color: #ee2840;
        text-align: center;
        line-height: 52px;
        -webkit-box-shadow: 4px 0 20px rgba(0,0,0,.12);
        box-shadow: 4px 0 20px rgba(0,0,0,.12);
        &:after
          content: '';
          background: url(../images/sprite.png) no-repeat -104px -289px;
          width: 7px;
          height: 11px;
          position: absolute;
          right: 25px;
          top: 50%;
          margin-top: -5.5px;
        &:hover
          background: #ee2840;
          color: #fff;
          &:after
            background-position: -82px -270px;

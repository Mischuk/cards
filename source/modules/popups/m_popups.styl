.popup
  position relative
  padding 40px 20px
  max-width 475px
  margin 40px auto
  border-radius $radius
  #modal-title
    display inline !important
  .m_default-form
    position static
  .mfp-close
    right -10px
    top 50px
    color #dfdfdf
    font-size 36px
    @media screen and (max-width: 568px)
      right 25px
    &:hover
      color #fb3a52
  h1
    &.left
      text-align left
  .close
    a
      transition all 0.15s cubic-bezier(.33,.66,.66,1)
      position relative
      display block
      width 200px
      margin 0 auto
      height 100%
      border-radius 50px
      border 1px solid #ee2840
      text-transform uppercase
      text-align center
      line-height 58px
      box-shadow 4px 0 20px rgba(0,0,0,.12)
      background #ee2840
      color #fff
      font-size 16px
      &:hover
        background #ee2840 - 15%
        border-color #ee2840 - 15%
#popup-action
  .form
    clearfix()
  .form-label
    float left
    &:first-child
      width 65%
      margin-right 5%
      @media screen and (max-width: 360px)
        float none
        width 100%
    &:first-child + .form-label
      width 30%
      @media screen and (max-width: 360px)
        float none
        width 100%
#popup-limit
  padding: 50px 40px;
  border: 5px solid #d2d2d2;
  background: #fff;
  border-radius: 10px;
  -webkit-box-shadow: 0 0 20px rgba(0,0,0,.2);
  box-shadow: 0 0 20px rgba(0,0,0,.2);
  h2
    text-align center
    font-family: ProximaNova-Black;
    font-weight: 400;
    font-style: normal;
    margin-bottom 0
    font-size 24px
    line-height 1
    color #444444
    text-transform uppercase
  .mfp-close
    top 0
    right 0
#popup-cards
  max-width: 830px;
  padding: 30px 40px;
  border: 5px solid #d2d2d2;
  background: #fff;
  border-radius: 10px;
  -webkit-box-shadow: 0 0 20px rgba(0,0,0,.2);
  box-shadow: 0 0 20px rgba(0,0,0,.2);
  h2
    text-align center
    font-family: ProximaNova-Black;
    font-weight: 400;
    font-style: normal;
    margin-bottom 20px
    font-size 24px
    line-height 1
    color #444444
    text-transform uppercase
  p
    color #999999
    text-align center
    margin-bottom 0
  .mfp-close
    top 0
    right 0
  .items
    clearfix()
    .item
      float left
      position relative 
      width 48%
      height 215px
      line-height 215px
      text-align center
      margin-left 4%
      margin-bottom 4%
      background #fff
      border-radius 10px
      border 1px solid #cecece
      box-shadow: -6px 8px 13px rgba(0,0,0,.17)
      @media screen and (max-width: 568px)
        line-height 150px
        height 150px
      @media screen and (max-width: 460px)
        float none
        width 100%
        margin-left 0
      &:nth-child(2n+1)
        margin-left 0
        clear left
      &:hover
        .desc
          display block
      .image
        text-align center
        img
          display inline-block
          vertical-align middle
          max-width 90%
          max-height 90%
      .desc
        display none
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background rgba(0,0,0,.7)
        color #fff
        line-height 210px
        border-radius 10px    
        @media screen and (max-width: 568px)    
          line-height 150px
        a
          -webkit-transition: all .15s cubic-bezier(.33,.66,.66,1);
          -o-transition: all .15s cubic-bezier(.33,.66,.66,1);
          transition: all .15s cubic-bezier(.33,.66,.66,1);
          position: relative;
          display inline-block
          vertical-align middle
          width: 200px
          margin 0 auto
          height: 40px
          border-radius: 50px;
          border: 1px solid #ee2840;
          text-transform: uppercase;
          text-align: center;
          line-height: 40px;
          -webkit-box-shadow: 4px 0 20px rgba(0,0,0,.12);
          box-shadow: 4px 0 20px rgba(0,0,0,.12);
          background: #ee2840;
          color: #fff;
          @media screen and (max-width: 568px)
            width 90%
          @media screen and (max-width: 460px)
            max-width 200px
          &:hover
            background: #db112a;
            border-color: #db112a;

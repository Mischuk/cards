html.stack-footer
  height 100%
  body, .mm-page
    height 100%
  .m_footer
    position absolute
    left 0
    bottom 0
    width 100%
.m_footer
  color #fff  
  height 570px  
  width 100%
  background #383838
  @media screen and (min-width: 701px) 
    height 385px      
  .wrapper
    height 100%
  .top
    background url("../images/m_s14/bg.jpg") no-repeat 50%
    background-size cover
    height 310px
    padding 40px 0
    @media screen and (max-width: 768px)
      padding 20px 0
    @media screen and (max-width: 700px)
      height auto
      text-align center
    @media screen and (max-width: 568px)
      padding-bottom 0
    .logo
      margin-bottom 25px
      @media screen and (max-width: 700px)
        text-align center
      @media screen and (max-width: 568px)
        margin-bottom 25px
      a
        display block
        background: url('../images/logo_.png') no-repeat 0 0;
        background-size contain
        width: 237px;
        height: 100px;
        @media screen and (max-width: 700px)
          margin 0 auto
          background-position center
    .logo + p
      font-size 22px
      @media screen and (max-width: 700px)
        br
          display none
          text-align center
      @media screen and (max-width: 568px)
        font-size 18px
    .email
      font-size 22px
      @media screen and (max-width: 568px)
        font-size 18px
      a
        color $orange
        &:hover
          text-decoration underline
  .bottom
    background #383838
    line-height 75px
    @media screen and (max-width: 568px)
      line-height 40px
    clearfix()
    .policy
      float left
      @media screen and (max-width: 568px)
        float none
    .dev
      float right
      @media screen and (max-width: 568px)
        float none
    a
      anim()
      color #868686
      &:hover
        color #fff
  .column
    float left
    width 50%
    height 100%
    @media screen and (max-width: 700px)
      width 100%
      float none
      height auto
    &:last-child
      position relative
      &:after
        content ""
        position absolute
        left 0
        top 0
        height 100%
        width 1px
        background rgba(255,255,255,.5)
        @media screen and (max-width: 700px)
          display none
  .second
    padding-left 185px
    @media screen and (max-width: 992px)
      padding-left 50px
    @media screen and (max-width: 700px)
      padding-left 0
    .questions
      light()
      font-size 20px
      text-transform uppercase
      margin-bottom 15px
      @media screen and (max-width: 568px)
        font-size 16px
        margin-top 15px
        margin-bottom 0
      & + p
        font-size 16px
        margin-bottom 15px
        @media screen and (max-width: 568px)
          margin-bottom 0
    .tel
      margin-bottom 15px
      a
        bold()
        font-size 25px
        color #f57d00
        cursor default
    .action
      height 60px
      width 285px
      margin 20px 0
      @media screen and (max-width: 700px)
        margin 20px auto
      a
        transition all 0.15s cubic-bezier(.33,.66,.66,1)
        position relative
        display block
        width 100%
        height 100%
        border-radius 50px
        border 1px solid #ee2840
        text-transform uppercase
        text-align center
        line-height 58px
        box-shadow 4px 0 20px rgba(0,0,0,.12)
        background #ee2840
        color #fff
        &:hover
          background #ee2840 - 15%
          border-color #ee2840 - 15%
